<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Moderator Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #e3f2fd, #ffffff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.07);
            background-color: #ffffff;
        }

        .sidebar-card {
            height: 100%;
            background: #f8f9fa;
        }

        .header-bar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            background-color: #f0f4f8;
            border-radius: 10px;
            margin-bottom: 2rem;
        }

        .logo-section {
            display: flex;
            align-items: center;
        }

            .logo-section img {
                height: 40px;
                width: auto;
                margin-right: 12px;
            }

        .dashboard-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1a237e;
            margin: 0;
        }

        .section-title {
            font-weight: 600;
            font-size: 1.2rem;
            margin-bottom: 1rem;
            color: #3949ab;
        }

        .form-control,
        .form-check-label {
            font-size: 0.95rem;
        }

        .stats strong {
            color: #1b5e20;
        }

        .btn-dark {
            background-color: #1a237e;
            border: none;
        }

            .btn-dark:hover {
                background-color: #283593;
            }
    </style>
</head>
<body>
    <div class="container-fluid p-4">
        <div class="header-bar">
            <div class="logo-section">
                <img src="~/Content/images/logo.jpg" alt="SmartAccessPro Logo" />
                <h2 class="dashboard-title">@ViewBag.Title</h2>
            </div>
        </div>

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
