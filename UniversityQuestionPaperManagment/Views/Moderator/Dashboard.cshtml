@{
    ViewBag.Title = "Moderator Dashboard";
    Layout = "~/Views/Shared/_ModeratorLayout.cshtml";
}

<div class="row g-4">

    <!-- Left Sidebar -->
    <div class="col-md-2">
        <div class="card sidebar-card p-3">
            <div class="section-title">📂 Paper Queue</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item px-0 border-0">🕒 Pending Papers</li>
                <li class="list-group-item px-0 border-0">✅ Approved Papers</li>
            </ul>
        </div>
    </div>

    <!-- Paper Review Form -->
    <div class="col-md-7">
        <div class="card p-4">
            <div class="section-title">📝 Paper Review</div>

            <div class="mb-3">
                <label class="form-label">Paper Title</label>
                <input type="text" class="form-control shadow-sm" placeholder="Enter paper title">
            </div>

            <div class="mb-3">
                <label class="form-label">Teacher's Name</label>
                <input type="text" class="form-control shadow-sm" placeholder="Enter teacher's name">
            </div>

            <div class="mb-3">
                <label class="form-label">Paper Content</label>
                <textarea class="form-control shadow-sm" rows="4" placeholder="Paste paper content here..."></textarea>
            </div>

            

            <div class="mb-3">
                <label class="form-label">Feedback Comments</label>
                <input type="text" class="form-control shadow-sm" placeholder="Write feedback...">
            </div>

            <button class="btn btn-dark w-100 mt-2 shadow">🤖 Check Paper Through AI</button>
        </div>
    </div>

    <div class="col-md-3">
        <!-- Paper Statistics -->
        <div class="card p-3 mb-3 stats">
            <h5 class="section-title">Paper Statistics</h5>
            <p>Total Papers Reviewed: <strong>12</strong></p>
            <p>Approved Papers: <strong>5</strong></p>
            <p>Rejected Papers: <strong>3</strong></p>
        </div>

        <!-- Review Form (Moved here) -->
        <div class="card p-3 mb-3">
            <h5 class="section-title">Review Form</h5>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="reviewStatus" id="approved" value="Approved">
                <label class="form-check-label" for="approved">✅ Approved</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="reviewStatus" id="rejected" value="Rejected">
                <label class="form-check-label" for="rejected">❌ Rejected</label>
            </div>
        </div>

        <!-- Notifications -->
        <div class="card p-3">
            <h5 class="section-title">Notifications</h5>
            <p>New Paper Submission</p>
        </div>
    </div>